.footer {
  padding-top: 30px;
}

.footer__top {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 15px;
  max-width: $width-container;
  margin: 0 auto;
  margin-bottom: 50px;
}

.footer__top-links {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
}

.footer__title {
  font-weight: 600;
  font-size: 20px;
  line-height: 135.3%;
  color: $color-text-secondary;
  margin-bottom: 25px;

  &_contact {
    margin-bottom: 20px;
  }
}

.footer__catalog, .footer__contact, .footer__info {
  display: flex;
  flex-direction: column;
}

.footer__catalog {
  margin-right: 20px;
}

.footer__contact {
  margin: 0 auto;
  margin-top: 40px;
  text-align: center;
  width: 100%;
}

.footer__link {
  font-size: 16px;
  line-height: 19px;
  color: $color-text;
  margin-bottom: 10px;
}

.footer__contact-link {
  line-height: 147.3%;
  margin-bottom: 5px;
  color: $color-text;

  &_last-email {
    margin-bottom: 10px;
  }
}

.logo_footer {
  display: none;
}

.footer__another-text {
  background: $color-border;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30px 0;
}

.footer__another-link {
  font-size: 16px;
  line-height: 147.3%;
  color: $color-text;
  text-decoration: underline;

  &:first-child {
    margin-bottom: 15px;
  }
}

.footer__copyright {
  background: none;
  text-decoration: none;
  margin-bottom: 0;
  display: block;
  text-align: center;
  padding: 20px 0;
  font-size: 16px;
  line-height: 147.3%;
  color: $color-text;
}

@media (min-width: $width-middle) {
  .footer__contact {
    width: auto;
    margin: 0;
    text-align: left;
  }

  .footer__contact-link {
    font-size: 16px;
    line-height: 19px;
  }

  .footer__another {
    background: $color-border;
  }

  .footer__another-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: $width-container;
    margin: 0 auto;
    padding: 0 15px;
  }

  .footer__another-text {
    flex-direction: row;
    order: 2;
    width: auto;
  }

  .footer__copyright {
    order: 1;
  }

  .footer__another-link:first-child {
    margin-bottom: 0;
    margin-right: 50px;
  }
}

@media (min-width: $width-large) {
  .footer__top-links {
    width: 60%;
  }

  .logo_footer {
    display: flex;
  }
}