button($padding-y = 16px, $padding-x = 48px) {
  background: $color-primary;
  border-radius: 5px;
  padding: $padding-y $padding-x;
  font-weight: 500;
  font-size: 16px;
  line-height: 19px;
  color: $color-bg;
  transition: 0.2s background;

  &:hover {
    background: darken(@background, 10%);
    transition: 0.2s background;
  }
}

flex-center() {
  display: flex;
  justify-content: center;
  align-items: center;
}
