      section.contact
        .container 
          h3.title.title_contact Местоположение и контакты
          .contact__inner 
            picture.contact__picture 
              source(srcset="./img/map.webp 768w, ./img/map-large.webp 1920w" type="image/webp")
              img.contact__map(srcset="./img/map.png 768w, ./img/map-large.png 1920w" src="./img/map-large.png" alt="Адрес: 143442, Московская обл. г. Красногорск, Аристово, ул. Светлая, 19, пом. 2339")
