      hr.filter__line
      details.filter__accordion 
        summary.filter__top-item  Слойность картона
        input#filter-layering-three.filter__checkbox(type="checkbox")
        label.filter__checkbox-label(for="filter-layering-three") Трехслойный
        input#filter-layering-five.filter__checkbox(type="checkbox")
        label.filter__checkbox-label(for="filter-layering-five") Пятислойный
        input#filter-layering-micro.filter__checkbox(type="checkbox")
        label.filter__checkbox-label(for="filter-layering-micro") Микрогофрокартон
      hr.filter__line
      details.filter__accordion 
        summary.filter__top-item  Цвет
        input#filter-color-white.filter__checkbox(type="checkbox")
